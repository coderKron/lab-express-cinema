<div>
  <h2>Edit movie: {{title}}</h2>
  <form action="/movies/{{_id}}/edit" method="POST">
    <label>
      Title:
      <input type="text" name="title" value="{{title}}" />
    </label>

    <label>
      Director:
      <input type="text" name="author" value="{{director}}" />
    </label>

    <label>
      Description:
      <textarea name="description" cols="30" rows="4">{{description}}</textarea>
    </label>

    <button>Save changes</button>
  </form>
  <a href="/movies/{{_id}}">Back</a>
</div>